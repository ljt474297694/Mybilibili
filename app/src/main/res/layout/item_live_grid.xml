<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
>

    <android.support.v7.widget.CardView
        android:id="@+id/item_live_layout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="10dp"
        android:layout_weight="1"
        android:clickable="true"
        android:foreground="?attr/selectableItemBackground"
        app:cardBackgroundColor="#fff"
        app:cardCornerRadius="2dp"
        app:cardElevation="4dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="190dp"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/item_live_cover"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:scaleType="center"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="5dp">

                <com.atguigu.mybilibili.view.CircleImageView
                    android:id="@+id/item_live_user_cover"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_gravity="start|top"
                    app:border_color="#555555"
                    app:border_width="1dp"/>

                <TextView
                    android:id="@+id/item_live_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="3dp"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:textColor="#555555"
                    android:textSize="14dp"/>
            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp">

                <TextView
                    android:id="@+id/item_live_user"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_centerInParent="true"
                    android:layout_marginStart="4dp"
                    android:maxLength="5"
                    android:textColor="#71000000"
                    android:textSize="12sp"/>

                <TextView
                    android:id="@+id/item_live_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:drawableLeft="@drawable/ic_watching"
                    android:layout_centerInParent="true"
                    android:layout_marginEnd="4dp"
                    android:drawablePadding="3dp"
                    android:padding="3dp"
                    android:textColor="#71000000"
                    android:textSize="10sp"/>


            </RelativeLayout>

        </LinearLayout>

    </android.support.v7.widget.CardView>
</LinearLayout>